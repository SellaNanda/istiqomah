<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#915000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl3033.tugas01.MainActivity">

    <TextView
        android:id="@+id/textViewKB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#4f2a05"
        android:fontFamily="Monotype Corsiva"
        android:text="KLASIK BERKESAN"
        android:textColor="#fff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textViewBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewKB"
        android:layout_centerHorizontal="true"
        android:text="BULBA 2k16"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewKL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewLB"
        android:layout_alignRight="@+id/textViewLB"
        android:layout_below="@+id/textViewBB"
        android:layout_marginTop="191dp"
        android:text="Kelas"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/spinnerKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewKL"
        android:layout_alignEnd="@+id/textViewBB"
        android:layout_alignLeft="@+id/textViewBB"
        android:layout_alignRight="@+id/textViewBB"
        android:layout_alignStart="@+id/textViewBB"
        android:layout_alignTop="@+id/textViewKL"
        android:background="#ffffff"
        android:entries="@array/kelas" />

    <TextView
        android:id="@+id/textViewLB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewKL"
        android:layout_marginTop="25dp"
        android:text="Lomba"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewLB"
        android:checked="false"
        android:text="Cipta Lagu"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxKM"
        android:layout_alignStart="@+id/checkBoxKM"
        android:layout_alignTop="@+id/checkBoxCL"
        android:checked="false"
        android:text="Film"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBoxCL"
        android:checked="false"
        android:text="Stand Up"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxKR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxPS"
        android:layout_alignStart="@+id/checkBoxPS"
        android:layout_alignTop="@+id/checkBoxKM"
        android:checked="false"
        android:text="Karikatur"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBoxSU"
        android:layout_toEndOf="@+id/radioButtonKK"
        android:layout_toRightOf="@+id/radioButtonKK"
        android:checked="false"
        android:text="Komik"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBoxPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButtonKN"
        android:layout_alignRight="@+id/radioButtonKN"
        android:layout_alignTop="@+id/checkBoxFL"
        android:checked="false"
        android:text="Poster"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textViewTL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBoxKM"
        android:layout_marginTop="26dp"
        android:text="Tema Lomba"
        android:textColor="#ffffff" />

    <RadioButton
        android:id="@+id/radioButtonKK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTL"
        android:checked="false"
        android:text="Kekeluargaan"
        android:textColor="#ffffff" />

    <RadioButton
        android:id="@+id/radioButtonKN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButtonKK"
        android:layout_toEndOf="@+id/checkBoxFL"
        android:layout_toRightOf="@+id/checkBoxFL"
        android:checked="false"
        android:text="Kenangan"
        android:textColor="#ffffff" />

    <RadioButton
        android:id="@+id/radioButtonBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButtonKK"
        android:checked="false"
        android:text="Berbagi"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonBG"
        android:layout_centerHorizontal="true"
        android:text="Daftar" />

    <TextView
        android:id="@+id/textViewHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewKL"
        android:layout_alignStart="@+id/textViewKL"
        android:layout_below="@+id/buttonDF"
        android:text="Hasil"
        android:textColor="#ffffff"
        tools:text="New Text" />

</RelativeLayout>